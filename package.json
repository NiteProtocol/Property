{
  "name": "contracts",
  "version": "4.0.0",
  "description": "Smart contracts for Dtravel ecosystem",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.4.0",
    "globals": "^15.8.0",
    "hardhat": "^2.24.2",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^9.1.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0",
    "typescript-eslint": "^7.17.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "scripts": {
    "chain": "npx hardhat node",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:testnet": "npx hardhat ignition deploy ignition/modules/Factory.ts --network testnet && npx hardhat ignition deploy ignition/modules/Payment.ts --network testnet",
    "deploy:mainnet": "npx hardhat ignition deploy ignition/modules/Factory.ts --network mainnet && npx hardhat ignition deploy ignition/modules/Payment.ts --network mainnet",
    "test": "npx hardhat compile && REPORT_GAS=true npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "format:sol": "npx prettier --write --plugin=prettier-plugin-solidity ./contracts -l",
    "format:ts": "npx prettier --write '**/**/*.{js,mjs,ts}'",
    "lint:sol": "npx solhint -f table ./contracts/**/*.sol -f table ./contracts/*.sol",
    "lint:ts": "npx eslint '**/**/*.{js,ts}'",
    "prepare": "husky"
  }
}
